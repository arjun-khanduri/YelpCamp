<% include ./partials/header %>
<div class="container-fluid">
    <header class="jumbotron">
        <div class="container-fluid">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked camps from all over the world</p>
            <a href="campgrounds/new" class="btn btn-large btn-primary">Add a new Campground</a>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex;flex-wrap:wrap;">
        <%campgrounds.forEach(function(campground){%>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail" style="padding: 0px;"> 
                <img class="img-responsive" src="<%= campground.image %>" style="width: 100%">
                <div class="caption-full"><h4><%=campground.name%></h4></div>
                <p>
                <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <%});%>    
    </div>
    
</div>
</body>
</html>