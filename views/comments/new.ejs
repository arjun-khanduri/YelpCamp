<%include ../campgrounds/partials/header.ejs%>
    <div class="container">
        <div class="row">
                <h1 style="text-align: center;">Add a New Comment to <%= campground.name %></h1>
                <div style="width:30%;margin: 25px auto;">
                    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                        <div class="form-group"><input class="form-control" name="comment[text]" type="text" placeholder="Text"></div>
                        <div class="form-group"><input class="form-control" name="comment[author]" type="text" placeholder="Author"></div>
                        <button class="btn btn-lg btn-primary btn-block">Submit</button><br>
                        <a href="/campgrounds">Go Back</a>
                    </form>
                </div>
        </div>
    </div>
</body>